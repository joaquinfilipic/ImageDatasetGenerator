<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

	<appender name="console"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %-48logger{36} - %msg%n</pattern>
		</encoder>
		
	</appender>

	<logger name="org.springframework">
		<level value="info" />
	</logger>
	<logger name="org.hibernate">
		<level value="info" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="console" />
	</root>

</configuration>
